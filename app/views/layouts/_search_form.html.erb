    <div class="container">
      <div class="row">
        <div class="col-6 mx-auto mt-3">
          <%= form_with url: search_path, method: :get, local: true do |f| %>
            <div class="form-group">
              <%= f.text_field :query, class: "form_control" %>
              <%= f.select :attribute, { "User": "name", "Book": "title" }, { class: "form-control" } %> 
              <%= f.select :search_method, { "完全一致": "full", "前方一致": "forward", "後方一致": "backward", "部分一致": "partial"}, { class: "form_control" } %>
              <%= f.submit '検索', class: "form-group" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
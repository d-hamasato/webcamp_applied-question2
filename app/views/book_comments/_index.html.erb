<table>
  <tbody>
    <% book.book_comments.each do |book_comment| %>
      <tr class="book_comment_<%= book_comment.id %>">
        <td>
          <%= link_to user_path(book_comment.user) do %>
            <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
        <td><%= book_comment.comment %></td>
        <% if book_comment.user == current_user %>
          <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment.id), class: "btn btn-sm btn-danger", method: :delete, remote: true %></td>
        <% end %>
      </tr>
    <% end %>
   </tbody>
</table>